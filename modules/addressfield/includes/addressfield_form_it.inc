      '#type' => 'select',
      '#options' => $this->italian_provinces(),
      '#default_value' => $address['administrative_area'],
      '#required' => $required,
    );
    $form['postal_code'] = array(
      '#title' => t('Post Code'),
      '#type' => 'textfield',
      '#size' => 10,
      '#required' => $required,
      '#default_value' => $address['postal_code'],
    );
    return $form;
  }


